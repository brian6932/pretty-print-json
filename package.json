{
   "name": "pretty-print-json",
   "version": "1.3.1",
   "description": "Pretty-print JSON data into HTML to indent and colorize (written in functional TypeScript)",
   "license": "MIT",
   "type": "module",
   "module": "dist/pretty-print-json.js",
   "jsdelivr": "dist/pretty-print-json.min.js",
   "main": "dist/pretty-print-json.umd.cjs",
   "style": "dist/pretty-print-json.css",
   "types": "dist/pretty-print-json.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/pretty-print-json.js",
         "require": "./dist/pretty-print-json.umd.cjs"
      },
      "./": "./dist/"
   },
   "repository": "github:center-key/pretty-print-json",
   "homepage": "https://pretty-print-json.js.org",
   "bugs": "https://github.com/center-key/pretty-print-json/issues",
   "docs": "https://pretty-print-json.js.org",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "color",
      "format",
      "html",
      "javascript",
      "json",
      "pretty-print",
      "pretty-print-json",
      "typescript"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "browser": true,
      "node": true,
      "mocha": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude-path .gitignore",
      "step:03": "eslint --max-warnings 0 src --ext .ts",
      "step:10": "tsc",
      "step:11": "tsc --module UMD --outDir build/umd",
      "step:12": "copy-file build/umd/pretty-print-json.js build/pretty-print-json.umd.cjs",
      "step:13": "esm-to-plain-js --cd=build pretty-print-json.js pretty-print-json.dev.js",
      "step:14": "uglifyjs build/pretty-print-json.dev.js --output build/pretty-print-json.min.js",
      "step:15": "copy-folder src --ext=.css build",
      "step:16": "csso src/pretty-print-json.css --output build/pretty-print-json.min.css",
      "step:17": "csso src/pretty-print-json.dark-mode.css --output build/pretty-print-json.dark-mode.min.css",
      "step:20": "add-dist-header build dist",
      "step:30": "replacer spec/interactive.html build/docs1 --find=dynamic.html --replacement=dynamic/",
      "step:31": "replacer build/docs1 build/docs2 --find=../dist --replacement='https://cdn.jsdelivr.net/npm/pretty-print-json@{{pkg.version|minor-version}}/dist' --pkg",
      "step:32": "copy-file build/docs2/interactive.html docs/index.html",
      "step:33": "copy-file spec/dynamic.html docs/dynamic/index.html",
      "step:40": "html-validator",
      "pretest": "npm-run-all step:*",
      "test": "mocha spec/*.spec.js",
      "examples": "npm test && node spec/examples.js"
   },
   "devDependencies": {
      "@fortawesome/fontawesome-free": "~6.2",
      "@types/node": "~18.8",
      "@typescript-eslint/eslint-plugin": "~5.40",
      "@typescript-eslint/parser": "~5.40",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "copy-file-util": "~0.1",
      "copy-folder-util": "~0.2",
      "csso-cli": "~4.0",
      "dna-engine": "~2.2",
      "eslint": "~8.25",
      "esm-to-plain-js": "~0.1",
      "replacer-util": "~0.2",
      "jquery": "~3.6",
      "jsdom": "~20.0",
      "jshint": "~2.13",
      "mocha": "~10.0",
      "npm-run-all2": "~6.0",
      "rimraf": "~3.0",
      "typescript": "~4.8",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.2",
      "web-ignition": "~1.5"
   }
}
