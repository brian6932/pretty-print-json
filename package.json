{
   "name": "pretty-print-json",
   "version": "1.3.0",
   "description": "Pretty-print JSON data into HTML to indent and colorize (written in functional TypeScript)",
   "license": "MIT",
   "type": "module",
   "module": "dist/pretty-print-json.js",
   "jsdelivr": "dist/pretty-print-json.min.js",
   "main": "dist/pretty-print-json.umd.cjs",
   "style": "dist/pretty-print-json.css",
   "types": "dist/pretty-print-json.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/pretty-print-json.js",
         "require": "./dist/pretty-print-json.umd.cjs"
      },
      "./": "./dist/"
   },
   "repository": "github:center-key/pretty-print-json",
   "homepage": "https://pretty-print-json.js.org",
   "bugs": "https://github.com/center-key/pretty-print-json/issues",
   "docs": "https://pretty-print-json.js.org",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "color",
      "format",
      "html",
      "javascript",
      "json",
      "pretty-print",
      "pretty-print-json",
      "typescript"
   ],
   "jshintConfig": {
      "esversion": 9,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "browser": true,
      "node": true,
      "mocha": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude-path .gitignore",
      "step:03": "eslint --max-warnings 0 src --ext .ts",
      "step:04": "tsc",
      "step:05": "tsc --module UMD --outDir build/umd",
      "step:06": "copy-file build/umd/pretty-print-json.js build/pretty-print-json.umd.cjs",
      "step:07": "esm-to-plain-js --cd=build pretty-print-json.js pretty-print-json.dev.js",
      "step:08": "uglifyjs build/pretty-print-json.dev.js --output build/pretty-print-json.min.js",
      "step:09": "copy-folder src --ext=.css build",
      "step:10": "add-dist-header build dist",
      "step:11": "gulp publish-website",
      "step:12": "html-validator",
      "pretest": "npm-run-all step:*",
      "test": "mocha spec/*.spec.js",
      "examples": "npm test && node spec/examples.js"
   },
   "devDependencies": {
      "@fortawesome/fontawesome-free": "~6.2",
      "@types/node": "~18.8",
      "@typescript-eslint/eslint-plugin": "~5.39",
      "@typescript-eslint/parser": "~5.39",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "copy-file-util": "~0.1",
      "copy-folder-cli": "~0.1",
      "dna.js": "~2.0",
      "eslint": "~8.24",
      "esm-to-plain-js": "~0.0",
      "gulp": "~4.0",
      "gulp-rename": "~2.0",
      "gulp-replace": "~1.1",
      "gulp-size": "~4.0",
      "jquery": "~3.6",
      "jsdom": "~20.0",
      "jshint": "~2.13",
      "merge-stream": "~2.0",
      "mocha": "~10.0",
      "npm-run-all2": "~6.0",
      "rimraf": "~3.0",
      "typescript": "~4.8",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.1",
      "web-ignition": "~1.5"
   }
}
